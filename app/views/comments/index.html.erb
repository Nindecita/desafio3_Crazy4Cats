<p style="color: green"><%= notice %></p>
<h1 class= "d-flex justify-content-center">Comentarios</h1>
<div id="comments">
  <% @comments.each do |comment| %>
    <%= render comment %>
    <p>
      <%= link_to "Ver comentario", comment, :class=>"btn bottom" %>
    </p>
  <% end %>
</div>
<%= link_to "Nuevo comentario", new_comment_path, :class=>"btn bottom" %>
